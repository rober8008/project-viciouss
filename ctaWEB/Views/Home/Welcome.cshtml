@{
    ViewBag.Title = "Welcome";    
}


<div style="background-image:url(../../Images/background/viciouss.jpg);height:100vh;width:100vw;background-size:100% 100%;color:white;"> 
    <div class="container" style="border-bottom-color:white;border-bottom-width:1px;border-bottom-style:solid;padding:10px 0px;height:85px;">
        <div class="col-md-3" style="text-align:left;padding-left:0px;padding-right:0px;height:75px;background-image:url(../../Images/logo/white_logo_word.png);background-size:100% 90%;background-repeat:no-repeat;"></div>
        <div class="col-md-offset-1 col-md-1 vcenter" style="line-height:65px;">@Html.ActionLink("HOME", "Home", "Home", new { }, new { @style = "color:white;text-decoration:none;" })</div>
        <div class="col-md-1 vcenter" style="line-height:65px;">FEATURES</div>
        <div class="col-md-1 vcenter" style="line-height:65px;">PRICING</div>
        <div class="col-md-1 vcenter" style="line-height:65px;">TEAM</div>
        <div class="col-md-2 col-md-offset-1 vcenter" style="line-height:65px;text-align:right;">
            @Html.ActionLink("LOG IN", "Login", "User", new { }, new { role = "button", @class = "btn btn-default", @style = "border-color:white;border-width:2px;background-color:transparent;color:white;padding:1px 20px;" })
        </div>
        <div class="col-md-1 vcenter" style="text-align:right;padding-right:0px;">
            <div style="width:100%;"><img src="~/Images/icon/fb.png" height="16" width="16" title="Facebook"/></div>
            <div style="width:100%;"><img src="~/Images/icon/tw.png" height="16" width="16" title="Twitter" /></div>
            <div style="width:100%;"><img src="~/Images/icon/gg.png" height="16" width="16" title="Google+" /></div>
        </div>
    </div> 
    <div class="container" style="text-align:center;position:relative;top:30%;transform:translateY(-30%);">
        <span style="font-weight:bold;font-size:55px;">COME ON IN</span>
        <br />
        <!--<img src="~/Images/background/start.png" height="50" width="100" />-->
    </div>
    <div class="container" style="text-align:center;position:relative;top:55%;transform:translateY(-55%);">
        @Html.ActionLink("WATCH THE VIDEO", "Login", "User", new { }, new { role = "button", @class = "btn btn-default", @style = "border-color:white;border-width:2px;background-color:transparent;color:white;padding:10px;font-weight:bold;font-size:20px;" })
    </div>  
</div>
