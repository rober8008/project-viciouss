@model ctaWEB.Models.SymbolDashboardModel

@{
    Layout = null;
    bool isuserlogged = System.Web.HttpContext.Current.User != null && System.Web.HttpContext.Current.User.Identity.IsAuthenticated;
    string modalToShow = "";

    if (isuserlogged)
    { modalToShow = "notInPortfolioModal"; }
    else
    { modalToShow = "notAuthorizedModal"; }
}

<div class="row" style="margin-top:10px;">
    <div class="container">
        <div class="col-lg-12 btn-toolbar" role="toolbar" style="border: 1px solid #E4E4E4;padding:5px;border-radius:5px;">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@modalToShow"><img src="~/Images/png/chart_candel.png" /></button>
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@modalToShow"><img src="~/Images/png/chart_line.png" /></button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@modalToShow"><img src="~/Images/png/arrow_up.png" /></button>
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@modalToShow"><img src="~/Images/png/arrow_down.png" /></button>
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@modalToShow"><img src="~/Images/png/arrow_right.png" /></button>
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@modalToShow"><img src="~/Images/png/arrow_left.png" /></button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@modalToShow"><img src="~/Images/png/chart_indicator.png" /></button>
                <div class="btn-group">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="modal" data-target="#@modalToShow">
                        <img src="~/Images/png/toolbar_empty.png" width="1" height="20" />
                        <span class="caret"></span>
                    </button>
                </div>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@modalToShow"><img src="~/Images/png/chart_shape.png" /></button>
                <div class="btn-group">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="modal" data-target="#@modalToShow">
                        <img src="~/Images/png/toolbar_empty.png" width="1" height="20" />
                        <span class="caret"></span>
                    </button>
                </div>
            </div>
        </div>
        @Html.Partial("~/Views/Dashboard/Partial/SymbolContent.cshtml", Model.symbol_content)
    </div>
</div>
@Html.Partial("~/Views/Quotes/Partial/NotAuthorizedModal.cshtml")
@Html.Partial("~/Views/Quotes/Partial/NotInPortfolioModal.cshtml")
